		else {

			return Long.parseLong(""
					+ Long.parseLong(format.format((nuevoFlujoEditar
							.getFechaCreacion()))) + idFlujo);
		}

		return Long
				.parseLong("" + Long.parseLong(format.format(now)) + idFlujo);
