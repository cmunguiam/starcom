		}
		puestoSelec = nuevoFlujoEditar.getPuestoTipo().getIdPuesto();
		procesoSelec = nuevoFlujoEditar.getProceso().getIdProceso();
		listaDetalleBandeja = detalleBandejaDao.getListFlujo(editFlujo
				.getIdFlujo());
		limpiarDetalleBandeja();

	}

